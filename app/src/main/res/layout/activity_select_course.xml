<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectCourse">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <androidx.cardview.widget.CardView
           xmlns:android="http://schemas.android.com/apk/res/android"
           xmlns:app="http://schemas.android.com/apk/res-auto"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           app:cardCornerRadius="8dp"
           app:cardElevation="10dp">

           <LinearLayout
               android:id="@+id/LUdemy"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/card_view_image"
                   android:layout_width="match_parent"
                   android:layout_height="190dp"
                   android:background="@drawable/udemy"
                   android:scaleType="centerCrop"/>

               <TextView
                   android:id="@+id/card_view_image_title"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="10dp"
                   android:text="@string/udemDes"
                   android:layout_gravity="center_horizontal"
                   android:textSize="20dp"/>
           </LinearLayout>

           <LinearLayout
               android:id="@+id/LC"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="350dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:orientation="vertical">

               <ImageView
                   android:id="@+id/card_view_image2"
                   android:layout_width="match_parent"
                   android:layout_height="190dp"
                   android:background="@drawable/coursera"
                   android:scaleType="centerCrop"/>

               <TextView
                   android:id="@+id/card_view_image_title2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="10dp"
                   android:text="@string/udemDes"
                   android:layout_gravity="center_horizontal"
                   android:textSize="20dp"/>

           </LinearLayout>

           <LinearLayout
               android:id="@+id/LS"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="710dp"
               android:clickable="true"
               android:foreground="?android:attr/selectableItemBackground"
               android:orientation="vertical">

           <ImageView
               android:id="@+id/card_view_image3"
               android:layout_width="match_parent"
               android:layout_height="190dp"
               android:background="@drawable/skill"
               android:scaleType="centerCrop"/>

           <TextView
               android:id="@+id/card_view_image_title3"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_margin="10dp"
               android:text="@string/skillSDec"
               android:layout_gravity="center_horizontal"
               android:textSize="20dp"/>

           </LinearLayout>

       </androidx.cardview.widget.CardView>
   </ScrollView>

</LinearLayout>